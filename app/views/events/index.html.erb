<h1>All Events</h1>

<% if current_user%>
  <%= link_to "New Event", new_event_path%>
<% end%>

<h3>Upcoming Events</h3>
  
  <% @events.upcoming.each do |event| %>
    <h4><%= event.name %></h4>
    <%= event.description%><br>
    <%= event.date%>
    <br><br>
  <% end %>
  


<h3>Past Events</h3>
  
  <% @events.past.each do |event| %>
    <h4><%= event.name %></h4>
    <%= event.description%><br>
    <%= event.date%>
    <br><br>
  <% end %>
  